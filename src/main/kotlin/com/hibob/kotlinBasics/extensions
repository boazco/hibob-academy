fun List<Number>.sum : Number {
    var sum = 0
    for(element in this){
        sum += element.toDouble() }
    return sum
}

fun main( ){
    val sum = listOf(1,2,3).sum()
    println(sum)
}

infix fun Number.toPowerOf(exponent: Number):Double {
    var output = 1.0
    for(i in 0 until exponent.toInt()){
        output *= this.toDouble()
    }
    return output
}